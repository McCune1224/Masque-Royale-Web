templ HxDeleteButton(text string, endpoint string, value string, target ...string) {
	if len(target) > 0 {
		<button
			type="button"
			class={ ButtonStyle }
			name={ value }
			value={ value }
			hx-delete={ endpoint }
			hx-target={ target[0] }
			hx-swap="outerHTML"
			hx-confirm="Are you sure?"
		>
			<div class="flex gap-2 items-center text-center">
				{ text }
				<img class="htmx-indicator h-4 w-4" src="/static/grid.svg"/>
